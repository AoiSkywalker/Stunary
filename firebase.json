{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 9090
    },
    "firestore": {
      "port": 9091
    },
    "database": {
      "port": 9092
    },
    "hosting": {
      "port": 9093
    },
    "pubsub": {
      "port": 9094
    },
    "ui": {
      "enabled": true,
      "port": 9095
    }
  }
}
